<article class="product-item">
    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
    <div class="product-item-content">
      <h2><%= product.title %></h2>
      <div class="product-item-actions">
        <a class="btn btn-alt" href="/admin/products/<%= product.id %>">Ver y editar</a>
        <button class="btn btn-alt" data-productid="<%= product.id %>" data-csrf="<%= locals.csrfToken %>">Borrar</button>
      </div>
    </div>
  </article>